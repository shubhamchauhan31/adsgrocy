<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#D6D6D6"

                        />
                    <!-- alttan gölge -->
                    <corners android:radius="15dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item
                android:bottom="0px"
                android:top="0px"
                android:right="0px"
                android:left="0px"
                >
                <shape>
                    <padding android:bottom="5dp"
                            android:top="5dp"
                            android:right="5dp"
                            android:left="5dp"
                        />
                    <gradient
                        android:startColor="@color/white"
                        android:endColor="@color/white"

                        android:angle="270" />
                    <corners
                        android:radius="15dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/white"

                        />
                    <!-- alttan gölge -->
                    <corners android:radius="15dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item
                android:bottom="0px"
                android:top="0px"
                android:right="0px"
                android:left="0px"
                >
                <shape>
                    <padding android:bottom="5dp"
                        android:top="5dp"
                        android:right="5dp"
                        android:left="5dp"
                        />
                    <gradient
                        android:startColor="@color/white"
                        android:endColor="@color/white"

                        android:angle="270" />
                    <corners
                        android:radius="15dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>


</selector>