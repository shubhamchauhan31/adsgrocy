<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="15dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:id="@+id/custom_share_app_name"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Shubham"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/custom_share_app_price"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Rs.1123"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/custom_share_app_label_cardView"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="#f7f7f7"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/p"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>

                <TextView
                    android:id="@+id/custom_share_app_sub_user_name"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Prince"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/custom_share_app_sub_price"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Rs.23"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>




</RelativeLayout>